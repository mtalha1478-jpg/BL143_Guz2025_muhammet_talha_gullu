import tkinter as tk
from tkinter import messagebox
pencere = tk.Tk()
pencere.title("Akıllı Gün Planlayıcı")
pencere.geometry("400x400")
pencere.resizable(False, False)

def sonuc_buton():
    uyku = uyku_suresi.get()
    ders = ders_suresi.get()
    serbest = serbest_suresi.get()
    if not uyku or not ders or not serbest:
        messagebox.showerror("Hata", "Tüm alanlar doldurulmalıdır!")
        return
    try:
        uyku = int(uyku)
        ders = int(ders)
        serbest = int(serbest)
    except ValueError:
        messagebox.showerror("Hata", "Tüm alanlar sayısal değer olmalıdır!")
        return
    if uyku < 0 or ders < 0 or serbest <0:
        messagebox.showerror("Hata","Değerler negatif olamaz")
        return
    if uyku+ders+serbest > 24: 
        messagebox.showerror("Hata", "Saatlerin toplamı 24'den büyük olamaz!")
        return
    elif uyku+ders+serbest < 24:
        messagebox.showerror("Hata","Saatlerin toplamı 24'den küçük olamaz!")
        return
    if uyku < 6:
        uyku_sonuc.config(text=f"{uyku} saatlik uykunuz: -Yetersiz uykudur-")
    elif uyku > 8:
        uyku_sonuc.config(text=f"{uyku} saatlik uykunuz: -Fazla uykudur-")
    else:
        uyku_sonuc.config(text=f"{uyku} saatlik uykunuz: -Normal uykudur-")
    if ders >= 6:
        ders_sonuc.config(text=f"{ders} saatlik çalışmanız: -Yoğun çalışma günüdür-")
    else:
        ders_sonuc.config(text=f"{ders} saatlik çalışmanız: -Normal çalışma günüdür-")
    if uyku < 6 and ders >= 6:
        genel_sonuc.config(text=f"Genel sonucunuz: -Verimsiz gündür-")
    else:
        genel_sonuc.config(text=f"Genel sonucunuz: -Dengeli gündür-")

tk.Label(pencere, text="Lütfen Saat Cinsinden Cevap Veriniz", font=('Arial', 14, 'bold')).grid(row=0, column=0, columnspan=2, pady=(10, 20))

tk.Label(pencere, text="Günlük Uyku Sürenizi Giriniz:").grid(row=1, column=0, padx=10, pady=5, sticky='w')
uyku_suresi = tk.Entry(pencere, width=20)
uyku_suresi.grid(row=1, column=1, padx=10, pady=5)

tk.Label(pencere, text="Günlük Ders Sürenizi Giriniz:").grid(row=2, column=0, padx=10, pady=5, sticky='w')
ders_suresi = tk.Entry(pencere, width=20)
ders_suresi.grid(row=2, column=1, padx=10, pady=5)

tk.Label(pencere, text="Günlük Serbest Zaman Sürenizi Giriniz:").grid(row=3, column=0, padx=10, pady=5, sticky='w')
serbest_suresi = tk.Entry(pencere, width=20)
serbest_suresi.grid(row=3, column=1, padx=10, pady=5)

uyku_sonuc = tk.Label(pencere, text="Sonuç bekleniyor...")
uyku_sonuc.grid(row=5, column=0, columnspan=2, pady=10)

ders_sonuc = tk.Label(pencere, text="sonuç bekleniyor...")
ders_sonuc.grid(row=6, column=0, columnspan=2, pady=10)

genel_sonuc = tk.Label(pencere, text="Sonuç bekleniyor...")
genel_sonuc.grid(row=7, column=0, columnspan=2, pady=10)

tk.Button(pencere,
          text="Sonucu Gör",
          bg="green",
          fg="white",
          command=sonuc_buton).grid(row=4, column=0, columnspan=2, pady=20)

pencere.mainloop()
